
@{
    ViewData["Title"] = "CourseList";
    Layout = "~/Views/Shared/_Layoutdash.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Course List</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="material-datatables">
                                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Course Title</th>
                                                <th>Fee</th>
                                                <th>Description</th>
                                                <th class="text-right">Actions</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>#</th>
                                                <th>Course Title</th>
                                                <th>Fee</th>
                                                <th>Description</th>
                                                <th class="text-right">Actions</th>
                                            </tr>
                                        </tfoot>
                                        <tbody id="courseList">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" data-backdrop="false" id="studentModal" showme="0" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-signup" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="material-icons">clear</i>
                </button>
            </div>
            <div class="modal-body" style="margin-top:40px;">
                <div class="row">
                    <div class="col-md-12" id="SMB">
                        <div class="card">
                            <div class="card-header card-header-primary">
                                <h4 class="card-title">
                                    <span>Student List</span>
                                </h4>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="material-datatables">
                                            <table id="datatablesstd" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th>#. &nbsp</th>
                                                        <th>Student Name</th>
                                                        <th>Father Name</th>
                                                        <th>Email</th>
                                                        <th>Phone</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tfoot>
                                                    <tr>
                                                        <th>#. &nbsp</th>
                                                        <th>Student Name</th>
                                                        <th>Father Name</th>
                                                        <th>Email</th>
                                                        <th>Phone</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </tfoot>
                                                <tbody id="tblStudent"></tbody>
                                            </table>
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>
    </div>
</div>


<div class="modal fade" id="CourseUpdate" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-signup" role="document">
        <div class="modal-content">
            <div class="card card-signup card-plain">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" />
                    <i class="material-icons">clear</i>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">



                                <form>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group ">
                                                <label for="txtCoursetitle" class="bmd-label-floating has-label">

                                                </label>
                                                <input type="text" class="form-control " id="txtCoursetitle" required name="txtCoursetitle">
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group ">
                                                <label for="txtFee" class="bmd-label-floating has-label">

                                                </label>
                                                <input type="number" class="form-control" id="txtFee" required name="txtFee">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group ">
                                                <label for="txtDescription" class="bmd-label-floating has-label">

                                                </label>
                                                <input type="text" class="form-control" id="txtDescription" required name="txtDescription">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">


                                    </div>

                                </form>
                                <div class="row">
                                    <div class="col-md-2 ml-auto float-right">
                                        <button class="btn btn-primary" id="btnsSubmit">
                                            <i class="material-icons" style="margin-top:-19px;">save</i>
                                            &nbsp; Save
                                        </button>
                                    </div>
                                </div>
                                <div>
                                </div>




                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/js/CourseList.js"></script>