
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layoutdash.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">User List</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="material-datatables">
                                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>FatherName</th>
                                                <th>Email</th>
                                                <th>PhoneNumber</th>
                                                <th>Gender</th>
                                                <th>Address</th>
                                                <th>Image</th>
                                                <th class="text-right">Actions</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>Name</th>
                                                <th>FatherName</th>
                                                <th>Email</th>
                                                <th>PhoneNumber</th>
                                                <th>Gender</th>
                                                <th>Address</th>
                                                <th class="text-right">Actions</th>
                                            </tr>
                                        </tfoot>
                                        <tbody id="userList">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="UserUpdate" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-signup" role="document">
        <div class="modal-content">
            <div class="card card-signup card-plain">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"/>
                        <i class="material-icons">clear</i>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">

                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="card">
                                                    <form>
                                                        <div class="card-body">
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <div class="form-group ">
                                                                        <label for="textEmpname" class="bmd-label-floating has-label">
                                                                            
                                                                        </label>
                                                                        <input type="text" class="form-control " id="txtsName" required name="txtsName">
                                                                    </div>
                                                                </div>

                                                                <div class="col-md-6">
                                                                    <div class="form-group ">
                                                                        <label for="textFname" class="bmd-label-floating has-label">
                                                                            
                                                                        </label>
                                                                        <input type="text" class="form-control " id="txtsFName" required name="txtsFName">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <div class="form-group ">
                                                                        <label for="txtPhone" class="bmd-label-floating has-label">
                                                                            
                                                                        </label>
                                                                        <input type="text" class="form-control" id="txtsPhone" required name="txtsPhone">
                                                                    </div>
                                                                </div>

                                                                <div class="col-md-6">
                                                                    <div class="form-group ">
                                                                        <label for="txtEmail" class="bmd-label-floating has-label">
                                                                            
                                                                        </label>
                                                                        <input type="text" class="form-control" email="true" id="txtsEmail" name="txtEmail">
                                                                        <span class="bmd-help">email@email.com</span>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <div>
                                                                        <label>Select Gender *</label>
                                                                        <div class="form-check">
                                                                            <label class="form-check-label">
                                                                                <input class="form-check-input" type="radio" name="exampleRadios" id="sMale" value="option2"> Male
                                                                                <span class="circle">
                                                                                    <span class="check"></span>
                                                                                </span>
                                                                            </label>
                                                                            <label class="form-check-label">
                                                                                <input class="form-check-input" type="radio" name="exampleRadios" id="sFemale" value="option1"> Female
                                                                                <span class="circle">
                                                                                    <span class="check"></span>
                                                                                </span>
                                                                            </label>
                                                                        </div>
                                                                        <div class="form-check">

                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="form-group ">
                                                                        <label for="txtAddress" class="bmd-label-floating has-label">
                                                                            
                                                                        </label>
                                                                        <input type="text" class="form-control" id="txtsAddress" required name="txtsAddress">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row">


                                                            </div>
                                                        </div>
                                                    </form>
                                                    <div class="row">
                                                        <div class="col-md-2 ml-auto float-right">
                                                            <button class="btn btn-primary" id="btnsSubmit">
                                                                <i class="material-icons" style="margin-top:-19px;">save</i>
                                                                &nbsp; Save
                                                            </button>
                                                        </div>
                                                    </div>
                                                    <div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                   
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/Userlist.js"></script>
